            color: #333;
        }
        .clogin{
            display: inline;
            font-weight: 400;
            margin: 0 0 5px;
        }
        .remind{
            position: relative;
            right: 0;
            line-height: 18px;
            text-align: right;
            margin-bottom: 20px;
            float: unset;
        }
        .remind a{
            margin-top: 0;
            height: 18px;
            line-height: 18px;
            color: #333;
            text-decoration: underline;
        }
        .loginbtn {
            background-color: black;
            font-size: 14px;
            font-weight: 400;
            height: 44px;
            text-transform: uppercase;
            color: white;
            padding: 12px 14px;
            margin: 8px 0;
            border: none;
            border-radius: unset;
            cursor: pointer;
            width: 100%;
            opacity: 0.9;
        }

        .loginbtn:hover {
            opacity: 1;
        }
        .new-customer{
