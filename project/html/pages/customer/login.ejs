    <div class="page-main">
        <h1 class="login-title">Login Or Create An Account</h1>
        <form id="login-account" action="https://fortunesvibez.herokuapp.com/account/login" method="POST" novalidate="novalidate">
            <div class="container">
                <div class="login-heading">
                    <strong role="heading" aria-level="2">Registered Customers</strong>
                </div>
                <hr>
                <label class="label" for="email">Email</label>
                <input type="email" id="email_field">

                <label class="label" for="password">Password</label>
                <input type="password" id="password_field">

                <label for="remember_me" class="clogin">
                    <input type="checkbox" value="remember-me">
                    <span>Keep me logged in</span>
                </label>

                <div class="remind">
                    <a class="action-remind" href="https://fortunesvibez.herokuapp.com/account/resetpassword/">
                        <span>Forgot Your Password?</span>
                    </a>
                </div>

                <button class="loginbtn" onclick="login()">Login</button>
            </div>
        </form>
        <div class="new-customer">
            <div class="new-customer-title">
                <strong id="new-customer-heading" role="heading" aria-level="2">New Customers</strong>
            </div>
            <div class="customer-content" aria-labelledby="new-customer-heading">
                <p>Create an account to expedite future checkouts, track order history, &amp; receive emails, discounts, &amp;
                    special offers!</p>
                <div class="actions-toolbar">
                    <div class="toolbar">
                        <a href="https://fortunesvibez.herokuapp.com/create/"
                            class="action create primary"><span>REGISTER</span></a>
                    </div>
                </div>
            </div>
        </div>
